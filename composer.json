{
  "name": "nixphp/database",
  "description": "NixPHP Database Plugin to make database handling easier.",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "nixphp-plugin",
  "authors": [
    {
      "name": "Flo Knapp",
      "email": "office@florianknapp.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "NixPHP\\Database\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Fixtures\\": "tests/Fixtures/"
    }
  },
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "nixphp/framework": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1",
    "phpunit/php-code-coverage": "^12.1"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}

{
  "name": "phpico/database",
  "description": "PHPico Database Plugin to make database handling easier.",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "phpico-plugin",
  "authors": [
    {
      "name": "Flo Knapp",
      "email": "office@florianknapp.de"
    }
  ],
  "repositories": [
    {
      "type": "path",
      "url": "../phpico"
    }
  ],
  "autoload": {
    "psr-4": {
      "PHPico\\Database\\": "src/"
    },
    "files": [
      "src/view_helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "phpico/framework": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1",
    "phpunit/php-code-coverage": "^12.1"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
